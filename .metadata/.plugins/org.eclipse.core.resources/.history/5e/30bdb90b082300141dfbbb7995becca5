package MazeSolve;

public class PlayerDirection4 implements Player{

	private int[][] path = new int [50000][2];
	private int location_x = 1;
	private int location_y = 1;
	private int stackCount = 0;
	private int pathCount = 0;
	public int direction = selectDirection();
	
	@Override
	public void start() {
		
			if(checkN() == false && checkE() == false && checkS() == false && checkW() == false){
				goBack();
			} else{
				this.direction = selectDirection();
				if(checkPath(this.direction) == true){
					go(this.direction);
				}
			}
			pathCountUp();
		
	}

	@Override
	public void stackCountUp() {
		this.stackCount++;
	}

	@Override
	public void stackCountDown() {
		this.stackCount--;
	}

	@Override
	public void pathCountUp() {
		this.pathCount++;
	}

	@Override
	public int selectDirection() {
		return (int) (Math.random()*8);
	}

	@Override
	public boolean checkPath(int direction) {
		switch(direction) {
			case 0 : return checkN(); 
			case 1 : return checkE();
			case 2 : return checkE();
			case 3 : return checkE();
			case 4 : return checkE();
			case 5 : return checkE();
			case 6 : return checkE();
			case 7 : return checkE();
			default: break;
		}
		return false;
	}

	@Override
	public boolean checkN() {
		return true;
	}
	@Override
	public boolean checkE() {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public boolean checkS() {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public boolean checkW() {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public boolean checkNE() {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public boolean checkES() {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public boolean checkSW() {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public boolean checkWN() {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public void go(int direction) {
		Maze.getInstance().cursor();
		
	}

	@Override
	public void goBack() {
		// TODO Auto-generated method stub	
	}

	@Override
	public void showPathCount() {
		System.out.println(this.pathCount);
	}
}
