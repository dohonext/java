package MazeSolve;

public class PlayerDirection4 implements Player{

	private int[][] path = new int [50000][2];
	private int location_x = 1;
	private int location_y = 1;
	private int stackCount = 0;
	private int pathCount = 0;
	private static PlayerDirection4 instance = new PlayerDirection4();
	
	@Override
