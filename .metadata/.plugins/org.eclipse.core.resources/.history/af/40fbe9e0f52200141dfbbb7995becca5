	}

	@Override
	public boolean checkPath(int direction) {
		switch(direction) {
			case 1 : return instance.checkN();
			case 2 : return instance.checkE();
			case 3 : return instance.checkE();
			case 4 : return instance.checkE();
			case 5 : return instance.checkE();
			case 6 : return instance.checkE();
			case 7 : return instance.checkE();
			case 8 : return instance.checkE();
			default: break;
		}
			
					
	}

